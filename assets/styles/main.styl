$bodyText = #444
$headerText = #333

body
  
  .slides   
    font-family: 'PT Serif', serif !important
    color: $bodyText

    h1, h2, h3, h4, h5, h6
        font-family: 'GT Walsheim', sans-serif !important
        font-weight: normal
        color: $headerText
        text-transform: capitalize
        line-height: 1em
  
        &.nocaps
          text-transform: none

    pre code
      font-size: 1.5em
      line-height: 1.2em

    .contact
      span
        display: inline-block
        margin: 10px

    img
      &.noshadow
        box-shadow: none
      &.noborder
        border: none

    ul
      margin: 1em 0

      li
        list-style: none
